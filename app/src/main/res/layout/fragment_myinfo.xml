<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="#0C0C0C"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <LinearLayout

            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="135dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">
                <com.loopj.android.image.SmartImageView
                    android:id="@+id/iv_head"
                    android:background="@drawable/yuan"
                    android:layout_width="85dp"
                    android:layout_height="85dp" />
                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑资料"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="50dp"
                    android:background="#725B5B"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp">
                <TextView
                    android:id="@+id/tv_nname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="luo7952"
                    android:textSize="24sp"/>
                <TextView
                    android:id="@+id/tv_usernaem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="抖音号:123123"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_introduce"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="你还没有填写个人简介..."
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_zp"
                    android:paddingHorizontal="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_zp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="作品"
                        android:layout_gravity="center"
                        android:textSize="18sp"/>
                    <ImageView
                        android:id="@+id/iv_zp"
                        android:layout_marginTop="5dp"
                        android:background="#DAD34B"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_gz"
                    android:paddingHorizontal="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_gz"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#BB9393"
                        android:text="关注"
                        android:layout_gravity="center"
                        android:textSize="18sp"/>
                    <ImageView
                        android:id="@+id/iv_gz"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:background="#DAD34B"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_below="@+id/ll"
            android:id="@+id/ll_fra">

        </LinearLayout>
    </RelativeLayout>
</ScrollView>